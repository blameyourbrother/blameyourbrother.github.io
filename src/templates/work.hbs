<div class="work-details">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-9 col-sm-9 left-col">
        {{#ifEqual work.hero.type 'iframe'}}
        <iframe src="{{ work.hero.src }}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        {{/ifEqual}}
        {{#ifEqual work.hero.type 'image'}}
        <img class="hero-image" src="{{ work.hero.src }}" alt="{{ work.hero.alt }}" style="max-width:{{ work.hero.width }}px">
        {{/ifEqual}}
        <div class="work-gallery hidden-xs">
          <div class="row">
            {{#each work.gallery}}
            <div class="work-gallery-item {{#ifEqual gridSize 1}}col-md-6 col-sm-6{{/ifEqual}}{{#ifEqual gridSize 2}}col-md-12{{/ifEqual}}">
              <a href="#{{@index}}" class="gallery-cta">
                <img src="{{grid}}">
              </a>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
      <div class="col-md-3 col-sm-3 right-col">
        <h2>{{ work.title }}</h2>
        <h3>{{ work.subtitle }}</h3>
        <div class="work-sharing visible-xs">
          <ul class="work-share">
            <li class="work-email">
              <a href="#">Share via email</a>
            </li>
            <li class="work-twitter">
              <a href="#">Share via Twitter</a>
            </li>
            <li class="work-facebook">
              <a href="#">Share via Facebook</a>
            </li>
            <li class="work-pinterest">
              <a href="#">Share via Pinterest</a>
            </li>
          </ul>
        </div>
        <div class="description">
          {{{ work.description }}}
        </div>
        <div class="work-sharing hidden-xs">
          <h4>Share is Nice</h4>
          <ul class="work-share">
            <li class="work-email">
              <a href="#">Share via email</a>
            </li>
            <li class="work-twitter">
              <a href="#">Share via Twitter</a>
            </li>
            <li class="work-facebook">
              <a href="#">Share via Facebook</a>
            </li>
            <li class="work-pinterest">
              <a href="#">Share via Pinterest</a>
            </li>
          </ul>
        </div>
        <div class="work-credits hidden-xs">
          <span class="work-credits-toggle"></span>
          <h4>Credits</h4>
          <ul>
            {{#each work.credits}}
            <li>
              <h5>{{ role }}</h5>
              <p>{{ name }}</p>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="work-slideshow-backdrop container-fluid">
    <div class="work-slideshow row">
      {{#each work.gallery}}
      <div class="work-slide col-xs-12">
        <img src="{{ full }}">
      </div>
      {{/each}}
    </div>
  </div>

  <div class="container-fluid visible-xs">
    <div class="row">
      <div class="col-xs-12">
        <div class="work-credits">
          <span class="work-credits-toggle"></span>
          <h4>Credits</h4>
          <ul>
            {{#each work.credits}}
            <li>
              <h5>{{ role }}</h5>
              <p>{{ name }}</p>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
