<div id="home">
  <div class="container-full">
    <div class="row">
      {{#each work}}
      <div class="col-md-4 col-sm-4 work-item">
        <a class="work-cta" href="work/{{slug}}.html">
          <div class="work-info">
            <h2>{{title}}</h2>
            <h3>{{subtitle}}</h3>
            <div class="work-type">{{type}}</div>
          </div>
        </a>
        <img src="{{gridImage.src}}" alt="{{gridImage.alt}}" style="max-width:{{gridImage.width}}px;">
      </div>
      {{/each}}
    </div>
  </div>
</div>
