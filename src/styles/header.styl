#header {

  text-align: center;

  &.open {
    ul {
      height: 226px;
    }

    h2 {
      border-top: 1px solid #d9d9d9;
    }
  }

  h2 {
    margin: 0;
    padding: 15px 0 11px;
    font-size: 15px;
    text-transform: uppercase;
    letter-spacing: 0.13em;
    border-bottom: 1px solid #d9d9d9;
  }

  ul {
    height: 0;
    overflow: hidden;
    list-style: none;
    padding: 0;
    margin: 0;
    transition: height 0.5s;
  }

  li {
    padding: 0;
    margin: 10px 0;
    font-size: 15px;
    text-transform: uppercase;
    letter-spacing: 0.13em;

    &:last-child {
      padding: 0 0 20px;
    }

    a {
      display:inline-block;
      padding: 5px 0;
      color: #010d21;
      text-decoration: none;
    }
  }

  @media $media-min-tablet {
    text-align: left;
    padding-top: 30px;
    padding-bottom: 27px;
    border-bottom: 1px solid #c0c2c7;

    h1 {
      width: 257px;
      height: 110px;
      margin: 0;
      overflow: hidden;
      text-indent: -1000px;
      background: url('/assets/images/logo.png');
    }

    ul {
      height: auto;
      text-align: right;
      transition: none;
    }

    li {
      display: inline-block;
      padding: 0 18px 0 0;
      line-height: 110px;
      font-family: 'Futura'
      font-size: 16px;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.13em;

      &:last-child {
        padding: 0;
      }

      a {
        color: #010d21;

        &:hover {
          text-decoration: none;
        }
      }
    }
  }

  @media $media-min-desktop {
    padding: 30px 0 27px;

    li {
      padding: 0 30px 0 0;
    }
  }
}

