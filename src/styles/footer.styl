#footer {

  padding-bottom: 25px;
  font-size: 12px;
  font-weight: 500;
  text-transform: uppercase;

  .social-links {
    list-style: none;
    padding: 20px 30px 10px 0;
    border-top: 1px solid #c0c2c7;
  }

  li {
    display: inline-block;
    width: 27px;
    height: 27px;
    margin: 0 3px 0 0;
    line-height: 44px;

    a {
      display: block;
      height: 27px;
      overflow: hidden;
      text-indent: -1000px;
      background-repeat: no-repeat;
    }

    &.facebook {
      width: 28px;

      a {
        background-image: url('/assets/images/footer-facebook.png')
      }
    }

    &.twitter {
      a {
        background-image: url('/assets/images/footer-twitter.png')
      }
    }

    &.vimeo {
      a {
        background-image: url('/assets/images/footer-vimeo.png')
      }
    }

    &.instagram {
      width: 28px;

      a {
        background-image: url('/assets/images/footer-instagram.png')
      }
    }
  }

  .contact-info {
    margin: 0 0 11px;
  }

  @media $media-min-tablet {
    padding-top: 25px;
    border-top: 1px solid #c0c2c7;
    clearfix();

    .footer-item {
      float: left;
      height: 40px;
      padding-right: 30px;
      padding-left: 30px;
      border-right: 1px solid #c2c4c9;

      &:last-child {
        border-right: none;
      }
    }

    .contact-info, .address {
      margin: 0;
      padding-top: 5px;
    }

    .social-links {
      padding: 8px 30px 10px 0;
      border-top: none;
    }
  }

  @media $media-min-desktop {
    padding: 25px 0;
  }
}
