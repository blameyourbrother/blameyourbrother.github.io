.work-details {
  .back-to-work {
    display: none;
  }

  h2, h3 {
    font-size: 15px;
    font-weight: 700;
    line-height: 24px;
    text-transform: uppercase;
  }

  h2 {
    display: inline-block;
    padding: 0;
    color: #d2d247;
    border: none;
  }

  h3 {
    display: inline-block;
    margin: 0;
    font-weight: bold;
  }

  h4 {
    margin: 0;
    padding-top: 3px;
    font-size: 15px;
    line-height: 24px;
    font-weight: bold;
    text-transform: uppercase;
  }

  .work-slide {
    margin: 5px 0 0;

    &:first-child {
      margin: 0;

      img {
        padding-top: 25px;
        border-top: 1px solid #c0c2c7;
      }
    }
  }

  .work-credits {
    position: relative;
    margin-top: 25px;
    border-top: 1px solid #c0c2c7;

    &.open {
      padding-bottom: 10px;

      .work-credits-toggle {
        rotate(45deg);
      }

      ul {
        max-height: 700px;
      }
    }

    h4 {
      line-height: 40px;
    }

    ul {
      transition: max-height 100ms ease-out;
      max-height: 0;
      overflow: hidden;
      margin: 0;
      padding: 0;
      list-style: none;
    }

    h5, p {
      display: inline;
      font: 12px/20px normal 'Gotham Book';
    }

    h5 {
      &:after {
        content: ':';
      }
    }
  }

  .work-credits-toggle {
    position: absolute;
    right 0;
    top: 8px;
    width: 23px;
    height: 23px;
    cursor: pointer;
    transition: transform 0.3s;

    &:before {
      absolute: top 0 left 50%;
      content: "";
      display: block;
      width: 1px;
      height: 100%;
      border-left: 1px solid #020d1f;
      translate(-50%, 0);
    }

    &:after {
      content: "";
      display: block;
      width: 1px;
      height: 100%;
      margin: 0 auto;
      border-left: 1px solid #020d1f;
      rotate(90deg);
    }
  }

  @media $media-min-tablet {
    .back-to-work {
      display: block;
      float: right;
      width: 20px;
      height: 19px;
      overflow: hidden;
      margin: 4px 0 0;
      text-indent: -1000px;
      background: url(/assets/images/back-to-grid@2x.png) left top no-repeat;
      background-size: contain;
    }

    h2 {
      display: block;
      padding: 0 35px 0 0;
      font-size: 24px;
      line-height: 31px;
    }

    h3 {
      display: block;
      padding: 0 20px 10px 0;
      font-weight: bold;
      border-bottom: 1px solid #c0c2c7;
    }

    .description {
      margin-bottom: 20px;

      &:empty {
        margin-bottom: 70px;}

      p {
        padding: 0;
      }
    }

    .work-credits {
      margin-top: 0;
      border-top: none;
      border-bottom: 1px solid #c0c2c7;
    }

    .work-gallery:first-child {
      .work-gallery-item.col-md-6 {
        &:first-child, &:nth-child(2) {
          margin-top: 0;
        }
      }
    }

    .work-hero + .work-gallery {
      margin: 25px 0 0;
      border-top: 1px solid #c0c2c7;
    }

    .work-hero + .work-hero {
      margin-top: 30px;
    }

    .work-gallery-item {
      img {
        max-width: 100%;
      }
    }

    .work-gallery-item + .work-gallery-item {
      margin-top: 30px;
    }

    .work-slideshow-backdrop {
      display: none;
      opacity: 0;
      fixed: top left;
      fixed: bottom right;
      z-index: 1;
      margin-left: 0;
      margin-right: 0;
      padding: 0;
      background: rgba(#000, 0.85);
    }

    .work-slideshow {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 90%;
      max-width: 613px;
      margin-left: 0;
      margin-right: 0;
      margin-bottom: 0;
      padding-top: 0;
      border-top: none;
      translate(-50%, -50%);

      &:hover {
        .slick-prev, .slick-next {
          opacity: 1;
        }
      }

      button {
        width: 35px;
        height: 35px;
        &:before {
          color: #010d21;
          font-size: 35px;
        }
      }

      .slick-prev, .slick-next {
        opacity: 0;
        transition: opacity 0.5s;
      }

      .slick-prev {
        left: 25px;
      }

      .slick-next {
        right: 25px;
      }
    }

    .work-slide {
      margin: 0;
      padding: 0;

      &:first-child {
        img {
          padding-top: 0;
          border-top: none;
        }
      }
    }
  }
}

.work-share {
  margin: 17px 0 0;
  padding: 15px 0 9px;
  border-top: 1px solid #c0c2c7;
  border-bottom: 1px solid #c0c2c7;
  list-style: none;
  clearfix();

  li {
    float: left;
    margin: 0 8px 0 0;
    width: 28px;
    height: 28px;

    &.work-email {
      a {
        background: url(/assets/images/work-email@2x.png) left top no-repeat;
        background-size: contain;
      }
    }

    &.work-twitter {
      a {
        background: url(/assets/images/footer-twitter@2x.png) left top no-repeat;
        background-size: contain;
      }
    }

    &.work-facebook {
      a {
        background: url(/assets/images/footer-facebook@2x.png) left top no-repeat;
        background-size: contain;
      }
    }

    &.work-pinterest {
      a {
        width: 28px !important;
        height: 28px !important;
        background: url(/assets/images/work-pin@2x.png) left top no-repeat !important;
        background-size: contain !important;
      }
    }
  }

  a {
    display: block;
    width: 28px;
    height: 28px;
    overflow: hidden;
    text-indent: -1000px;
  }

  @media $media-min-tablet {
    margin: 0;
    padding: 10px 0 15px;
    border-top: none;
  }
}
