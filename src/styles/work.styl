.work {
  @media $media-min-tablet {
    h2 {
      padding: 0;
      color: #d2d247;
      border: none;
    }

    h3 {
      padding: 0 20px 10px 0;
      font-weight: bold;
      border-bottom: 1px solid #c0c2c7;
    }

    h4 {
      margin: 0;
      font-size: 15px;
      line-height: 24px;
      font-weight: bold;
      text-transform: uppercase;
    }

    .description {
      p {
        padding: 0;
      }
    }

    .work-share {
      margin: 0;
      padding: 10px 0 15px;
      border-bottom: 1px solid #c0c2c7;

      li {
        display: inline-block;
        margin: 0 3px 0 0;
        width: 27px;
        height: 27px;

        &.work-email {
          a {
            background: url(/assets/images/work-email.png) left top no-repeat;
            background-size: contain;
          }
        }

        &.work-twitter {
          a {
            background: url(/assets/images/footer-twitter.png) left top no-repeat;
            background-size: contain;
          }
        }

        &.work-facebook {
          a {
            background: url(/assets/images/footer-facebook.png) left top no-repeat;
            background-size: contain;
          }
        }

        &.work-pinterest {
          a {
            background: url(/assets/images/work-pin.png) left top no-repeat;
            background-size: contain;
          }
        }
      }

      a {
        display: block;
        width: 27px;
        height: 27px;
        overflow: hidden;
        text-indent: -1000px;
      }
    }

    .work-credits {
      position: relative;
      padding: 0 0 5px;
      border-bottom: 1px solid #c0c2c7;

      &.open {
        .work-credits-toggle:after {
          display: none;
        }

        ul {
          display: block;
        }
      }

      h4 {
        line-height: 40px;
      }

      ul {
        display: none;
        margin: 0;
        padding: 0;
        list-style: none;
      }

      h5 {
        margin: 15px 0 5px;
        font-weight: bold;
      }
    }

    .work-credits-toggle {
      position: absolute;
      right 0;
      top: 9px;
      width: 23px;
      height: 23px;
      cursor: pointer;

      &:before {
        content: "";
        position: relative;
        top: 50%;
        display: block;
        width: 100%;
        height: 1px;
        background: #020d1f;
      }

      &:after {
        content: "";
        display: block;
        width: 1px;
        height: 100%;
        margin: 0 auto;
        background: #020d1f;
      }
    }

    .work-gallery {
      margin: 25px 0 0;
      border-top: 1px solid #c0c2c7;
    }

    .work-gallery-item {
      margin: 30px 0 0;

      img {
        max-width: 100%;
      }
    }

    .work-slideshow-backdrop {
      display: none;
      opacity: 0;
      fixed: top left;
      fixed: bottom right;
      z-index: 1;
      background: rgba(#010d21, 0.85);
    }

    .work-slideshow {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 90%;
      max-width: 613px;
      translate(-50%, -50%);

      button {
        width: 35px;
        height: 35px;
        &:before {
          color: #010d21;
          font-size: 35px;
        }
      }

      .slick-prev {
        left: 25px;
      }

      .slick-next {
        right: 25px;
      }
    }
  }
}
