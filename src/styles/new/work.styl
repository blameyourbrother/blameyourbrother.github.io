.work-details {
  .back-to-work {
    display: none;
  }

  h4 {
    margin: 0;
    padding-top: 3px;
    font-size: 15px;
    line-height: 24px;
    font-weight: bold;
    text-transform: uppercase;
  }

  .work-slide {
    margin: 5px 0 0;

    &:first-child {
      margin: 0;

      img {
        padding-top: 25px;
        border-top: 1px solid #c0c2c7;
      }
    }
  }

  .work-gallery-item {
    margin-top: 30px;

    &:first-of-type {
      margin-top: 0;
    }
  }

  @media $media-min-tablet {
    .back-to-work {
      display: block;
      float: right;
      width: 20px;
      height: 19px;
      overflow: hidden;
      margin: 4px 0 0;
      text-indent: -1000px;
      background: url(/assets/images/back-to-grid@2x.png) left top no-repeat;
      background-size: contain;
    }

    h2 {
      display: block;
      padding: 0 35px 0 0;
      font-size: 24px;
      line-height: 31px;
    }

    .work-credits {
      margin-top: 0;
      border-top: none;
      border-bottom: 1px solid #c0c2c7;
    }

    .work-gallery:first-child {
      .work-gallery-item.col-md-6 {
        &:first-child, &:nth-child(2) {
          margin-top: 0;
        }
      }
    }

    .work-hero + .work-gallery {
      margin: 25px 0 0;
      border-top: 1px solid #c0c2c7;
    }

    .work-hero + .work-hero {
      margin-top: 30px;
    }

    .work-gallery-item {
      img {
        max-width: 100%;
      }
    }

    .work-slideshow-backdrop {
      display: none;
      opacity: 0;
      fixed: top left;
      fixed: bottom right;
      z-index: 1;
      margin-left: 0;
      margin-right: 0;
      padding: 0;
      background: rgba(#000, 0.85);
    }

    .work-slideshow {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 90vw;
      margin-left: 0;
      margin-right: 0;
      margin-bottom: 0;
      padding-top: 0;
      border-top: none;
      translate(-50%, -50%);

      &:hover {
        .slick-prev, .slick-next {
          opacity: 1;
        }
      }

      button {
        width: 35px;
        height: 35px;
        &:before {
          color: #010d21;
          font-size: 35px;
        }
      }

      .slick-prev, .slick-next {
        opacity: 0;
        transition: opacity 0.5s;
      }

      .slick-prev {
        left: 25px;
      }

      .slick-next {
        right: 25px;
      }
    }

    .work-slide {
      width: 90vw;
      margin: 0;
      padding: 0;

      &:first-child {
        img {
          padding-top: 0;
          border-top: none;
        }
      }
    }
  }
}

.work-hero__responsive-wrapper {
  position: relative;
  padding: 56.25% 0 0;
}

.work-hero + .work-hero {
  margin: 25px 0 0;
}

.work-hero__video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.work-details__subtitle {
  margin: 35px 0 30px;
  text-align: center;
  font-family: 'Gotham Book', sans-serif;
  font-size: 25px;
  line-height: 25px;
  font-weight: bold;
}

.work-details__description {
  margin: 0 0 35px;
  padding: 0 0 35px;
  font-family: 'Gotham Book', sans-serif;
  font-size: 20px;
  line-height: 25px;
  border-bottom: 1px solid #5a5a5a;
}

.work-details__credits-title {
  margin: 0 0 30px;
  text-align: center;
  font-family: 'Gotham Book', sans-serif;
  font-size: 25px;
  line-height: 25px;
  font-weight: bold;
  text-transform: none;
}

.work-details__credits-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.work-details__credit {
  margin-bottom: 10px;
  font-family: 'Gotham Book', sans-serif;
  font-size: 16px;
  line-height: 20px;

  &.work-details__credit--standout {
    margin: 1em 0;
  }
}

.work-details__credit-role-type, .work-details__credit-role-name {
  display: inline;
  font-family: 'Gotham Book', sans-serif;
  font-size: 16px;
  line-height: 20px;
}

.work-details__credit-role-type {
  font-weight: bold;
  letter-spacing: 0;
  text-transform: none;

  &::after {
    content: ": ";
  }
}
