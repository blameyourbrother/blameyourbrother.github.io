#footer {

  padding-bottom: 25px;
  font-size: 12px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.13em;

  .social-links {
    list-style: none;
    padding: 20px 30px 10px 0;
    border-top: 1px solid #c0c2c7;
  }

  a {
    color: #333;
    text-decoration: none;

    &[href^=tel] {
      color: inherit;
    }
  }

  li {
    display: inline-block;
    width: 28px;
    height: 28px;
    margin: 0 3px 0 0;
    line-height: 44px;

    a {
      display: block;
      width: 28px;
      height: 28px;
      overflow: hidden;
      text-indent: -1000px;
      background-repeat: no-repeat;
      background-size: contain;
    }

    &.facebook {
      a {
        background-image: url('/assets/images/footer-facebook@2x.png')
      }
    }

    &.twitter {
      a {
        background-image: url('/assets/images/footer-twitter@2x.png')
      }
    }

    &.vimeo {
      a {
        background-image: url('/assets/images/footer-vimeo@2x.png')
      }
    }

    &.instagram {
      a {
        background-image: url('/assets/images/footer-instagram@2x.png')
      }
    }
  }

  .contact-info {
    margin: 0 0 11px;
  }

  .us-representation {
    margin-top: 20px;

    & > * {
      display: block;
    }

    .us-representation-title {
      margin-bottom: 11px;
    }
  }

  @media $media-min-tablet {
    padding-top: 25px;
    border-top: 1px solid #c0c2c7;
    clearfix();

    li:last-child {
      margin-right: 0;
    }

    .footer-item {
      float: right;
      height: 40px;
      padding-right: 15px;
      padding-left: 15px;
      border-right: 1px solid #c2c4c9;

      &:last-child {
        padding-right: 0;
        border-right: none;
      }
    }

    .contact-info, .address {
      margin: 0;
      padding-top: 5px;
    }

    .social-links {
      padding: 8px 30px 10px 0;
      border-top: none;
    }
  }

  @media $media-min-desktop {
    padding: 30px 0 25px;

    .footer-item {
      padding-left: 30px;
      padding-right: 30px;

      &:first-child {
        padding-left: 0;
      }
    }
  }
}
