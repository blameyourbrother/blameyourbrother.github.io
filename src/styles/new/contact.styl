.contact__area, .contact__address {
	text-align: center;
}

.contact_info {
	margin-top: 45px;
	margin-bottom: 15px;
}

.contact__area {
	margin-top: 85px;
	margin-bottom: 30px;
	font-family: 'Gotham Book', sans-serif;
	font-weight: bold;
	font-size: 15px;
	line-height: 25px;
}

.contact__address {
	font-family: 'Gotham Book', sans-serif;
	text-transform: uppercase;
	font-size: 14px;
	line-height: 25px;
}

.contact__title {
	margin-top: 50px;
	font-family: 'Gotham Book', sans-serif;
	font-size: 39px;
	line-height: 70px;
	text-align: center;
	text-transform: uppercase;
	color: #d4d346;
}
